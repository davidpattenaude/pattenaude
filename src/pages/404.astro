---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = '404';
const description = '404.';
const permalink = `${Astro.site.href}404`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>404</h1>
    <p>Welp this is awkward! The content requested could not be found.</p>
    <div class="notfound-images">
        <figure class="notfound-image">
          <img src="/assets/404.webp" alt="Black and white cat behind plant.">
        </figure>
    </div>
    <p>Return <a href="/">home</a>.</p>
  </div>
</BaseLayout>

<style>
    .container p {
        text-align: center;
    }
    .notfound-images {
        display: flex;
        justify-content: center;
    }

    .notfound-image img {
        border-radius: 8px;
        max-width: 600px;
    }

    @media (max-width: 800px) {
        .notfound-image img {
            max-width: 300px;
        }
    }
</style>